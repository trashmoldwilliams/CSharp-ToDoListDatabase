<h1>Your Tasks<h1>
@if (@Model.Count == 0)
{
  <h3>You haven't added any tasks yet!</h3>
}
@foreach (var task in Model)
{
  <h3><a href='/tasks/@task.GetId()'>@task.GetDescription()</a></h3>
}
<p><a href='/tasks/new'>Add a new task</a></p>
<p><a href='/tasks/cleared'>Delete all tasks</a></p>
<p><a href="/">Go to homepage</a></p>
